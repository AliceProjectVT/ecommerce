<div class="container">
  <aside class="aside">
    <div>Real time product</div>
    
    <!-- Tu formulario aquí -->
    <form id="form-product">
        <input type="text" name="title" id="title" placeholder="Nombre del producto">
        <input type="text" name="description" id="description" placeholder="Descripción del producto">
        <input type="number" name="price"id="price" placeholder="Precio del producto">
        <input type="number" name="stock" id="stock" placeholder="Stock para venta">
        <input type="text" name="category" id="category" placeholder="Categoria">
        <input type="text" name="image" id="thumbnails" placeholder="Imagen del producto">
        <input type="text" name="cantidad" id="quantity" placeholder="Cantidad en existencia">
        <div class="switch-container">
            <label class="switch">
            <h5>¿El producto está disponible?</h5>
                <input type="checkbox">
                <span class="slider round"></span>
            </label>
        </div>

        
          <input type="submit">
        <button id="clean" type="button">Limpiar</button> 
    </form>
  </aside>

