  </thead>
  <tbody id="table-body">
    {{#each products}}
      <tr>
        <td><img src="{{image}}" alt="Imagen del producto"></td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>{{price}}</td>
        <td>{{stock}}</td>
        <td>{{category}}</td>
        <td>{{createdBy}}</td>
        <td>{{quantity}}</td>
        <td>{{isValid}}</td>

